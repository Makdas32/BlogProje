@model IEnumerable<BlogProje.Models.YaziModel>


@if (Model.Count() == 0)
{
    <div class="alert alert-danger" role="alert">
        <h3>Kayıt Bulunamadı</h3>
    </div>
}
else
{

    foreach (var yazi in Model)
    {
        <div class="yazi">
            <div class="page-header">
                <h3>@yazi.Baslik</h3>
            </div>
            <p>
                <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
                @yazi.EklenmeTarihi
            </p>
            <hr />
            <img class="img-fluid" src="https://via.placeholder.com/900x300" />
            <hr />
            <p>@yazi.Aciklama</p>
            @Html.ActionLink("Devamını Oku", "Details", "Yazi", new { id = yazi.Id }, new { @class = "btn btn-primary" })
        </div>
        <br />
    }
}
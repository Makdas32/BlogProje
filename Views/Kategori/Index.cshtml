@model IEnumerable<BlogProje.Models.KategoriModel>

@{
    ViewBag.Title = "Index";
}

<h2>Kategoriler</h2>

<p>
    @Html.ActionLink("Yeni Kategori Ekle", "Ekle", null, new { @class = "btn btn-primary" })
</p>
<hr />
@if (TempData["KategoriGuncel"] != null)
{
    var kategori = (BlogProje.Models.Kategori)TempData["KategoriGuncel"];
    <div class="alert alert-success" role="alert">
        <strong>@kategori.KategoriAdi</strong> Güncellendi
    </div>
}
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th style="width:60%">
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th style="width:16%">
            Yazı Sayısı
        </th>
        <th style="width:150px"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YaziSayisi)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }

</table>
